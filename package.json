{
  "name": "zooharmony-contracts",
  "scripts": {
    "build": "hardhat compile",
    "deploy:harmony": "npx hardhat run scripts/deploy.ts --network harmony",
    "deploy:rinkeby": "npx hardhat run scripts/deploy.ts --network rinkeby",
    "deploy:aurora": "npx hardhat run scripts/deploy.ts --network aurora",
    "deploy:ropsten": "npx hardhat run scripts/deploy.ts --network ropsten",
    "deploy:mumbai": "npx hardhat run scripts/deploy.ts --network mumbai",
    "verify:mumbai": "npx hardhat verify --network mumbai  --libraries libraries.ts",
    "deploy:testnet": "npx hardhat run scripts/deploy.ts --network testnet",
    "deploy:mainnet": "npx hardhat run scripts/deploy.ts --network mainnet",
    "verify:rinkeby": "npx hardhat verify --network rinkeby  --libraries libraries.ts",
    "verify:rinkeby2": "npx hardhat verify --network rinkeby  --libraries libraries.ts"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@typechain/ethers-v5": "^8.0.1",
    "@typechain/hardhat": "^3.0.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.13",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "2.8.4",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ],
    "*.sol": [
      "prettier --write"
    ],
    "*.md": "prettier --write"
  }
}
